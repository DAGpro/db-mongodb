{
    "name": "yiisoft/db-mongodb",
    "description": "Yii Framework MongoDB extension",
    "keywords": ["yii", "mongo", "mongodb", "active-record", "gridfs"],
    "type": "library",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/db-mongodb/issues",
        "forum": "http://www.yiiframework.com/forum/",
        "wiki": "http://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "source": "https://github.com/yiisoft/db-mongodb"
    },
    "authors": [
        {
            "name": "Paul Klimov",
            "email": "klimov.paul@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "yiisoft/yii-core": "^3.0@dev",
        "yiisoft/db": "dev-master",
        "yiisoft/inflector": "^3.0@dev",
        "ext-mongodb": ">=1.0.0",
        "yiisoft/active-record": "^3.0@dev"
    },
    "require-dev": {
        "hiqdev/composer-config-plugin": "^1.0@dev",
        "yiisoft/arrays": "^3.0@dev",
        "yiisoft/strings": "^3.0@dev",
        "phpunit/phpunit": "^7.3",
        "yiisoft/di": "^3.0@dev",
        "yiisoft/yii-console": "dev-master",
        "yiisoft/log": "dev-master",
        "yiisoft/cache": "dev-master",
        "yiisoft/view": "^3.0@dev",
        "yiisoft/rbac": "^3.0@dev"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "autoload": {
        "psr-4": {"Yiisoft\\Db\\MongoDb\\": "src"}
    },
    "autoload-dev": {
        "psr-4": {"Yiisoft\\Db\\MongoDb\\Tests\\": "tests"}
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
